<div class='container'>
  <div class="wrappaer col-md-8 col-md-offset-2 col-sm-10">
    <h1>List</h1>
    <p><%= notice %></p>
    <section class="main-header">
      
    <% @blogs.each do |blog| %>
      <div class='row'>
        <h3>Title</h3>
        <h4><strong><%= blog.title %></strong></h4>
        <h3>Contents</h3>
        <h4><strong><%= blog.content %></strong></h4>
        
        <%# ボタン表示%>
        <%= link_to "参照する", blog_path(blog.id),class: 'btn btn-default btn-sm 	btn-default' %>
        
        <%#一覧表示から見えなくする条件分岐 %>
        <% if blog.user_id == current_user.id %>
          <%= link_to "編集する", edit_blog_path(blog.id),class: 'btn btn-default btn-sm 	btn-default' %>
          <%= link_to '削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } ,class: 'btn btn-default btn-sm btn btn-danger' %>
        <% end %>
        
      </div>
    <% end %>
    </section>
    
  </div>
</div>
